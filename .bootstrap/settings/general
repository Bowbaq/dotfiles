# Set computer name (as done via System Preferences â†’ Sharing)
sudo scutil --set ComputerName "bowbaq-originate"
sudo scutil --set HostName "bowbaq-originate"
sudo scutil --set LocalHostName "bowbaq-originate"
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string "bowbaq-originate"

# Restart automatically if the computer freezes
sudo systemsetup -setrestartfreeze on

# Set standby delay to 6 hours (default is 1 hour)
sudo pmset -a standbydelay 21600

# Check for software updates daily, not just once per week
defaults write com.apple.SoftwareUpdate ScheduleFrequency -int 1

#Enabling full keyboard access for all controls (e.g. enable Tab in modal dialogs
defaults write NSGlobalDomain AppleKeyboardUIMode -int 3
